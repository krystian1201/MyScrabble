<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                mc:Ignorable="d" x:Class="MyScrabble.MainWindow"
        xmlns:local="clr-namespace:MyScrabble.View"
        Title="MyScrabble" ResizeMode="CanMinimize" Width="800" Height="700" Foreground="White" >
    
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF2EC3DA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140*"/>
            <!--<ColumnDefinition Width="30*"/>-->
            <ColumnDefinition Width="500"/>
            <!--<ColumnDefinition Width="30*"/>-->
            <ColumnDefinition Width="140*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="500"/>
            <!--<RowDefinition Height="29*"/>-->
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>


        <local:BoardUC Grid.Row="1" Grid.Column="1"/>

        
        <local:TilesRackUC Grid.Column="2" Grid.Row="2"/>

        
        <ComboBox x:Name="ComboBoxX" HorizontalAlignment="Left" 
        	VerticalAlignment="Top" Width="50" RenderTransformOrigin="1.92,-6.333" 
                  Margin="10,76,0,0" Grid.Row="1" Grid.Column="4"/>
        
        <ComboBox x:Name="ComboBoxY" Width="50" RenderTransformOrigin="1.74,0.619" 
                  Margin="69,76,43,305" Grid.Row="1" Grid.Column="4"/>
        
        <ComboBox x:Name="ComboBoxLetters" 
        	VerticalAlignment="Top" Width="50" Margin="10,30,102,0" Grid.Row="1" Grid.Column="4"/>
        
        <Label x:Name="LabelY" Content="Y" HorizontalAlignment="Left" Margin="93,53,0,0" 
        	VerticalAlignment="Top" Foreground="White" Grid.Row="1" RenderTransformOrigin="42.062,-12.435" Grid.Column="4"/>
        
        <Label x:Name="LabelX" Content="X" HorizontalAlignment="Left" Margin="23,53,0,0" 
        	VerticalAlignment="Top" Foreground="White" Grid.Row="1" RenderTransformOrigin="39.562,-13.087" Grid.Column="4"/>
        
        <Label x:Name="LabelLetter" Content="Letter" HorizontalAlignment="Left" Margin="10,7,0,0" 
        	VerticalAlignment="Top" Foreground="White" Grid.Row="1" Grid.Column="4"/>
        
        <Button x:Name="ButtonPlaceATile" Content="GO!" HorizontalAlignment="Right" Margin="0,121,43,0" 
        	VerticalAlignment="Top" Width="109" Grid.Row="1" Grid.Column="4" Height="45" Click="ButtonPlaceATile_Click"/>
        
        <TextBox x:Name="textBox1" Grid.Column="4" HorizontalAlignment="Left" Height="23" Margin="10,211,0,0" Grid.Row="1" 
                 TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>

</Window>
