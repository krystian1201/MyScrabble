    static class Board
    {
        public static int boardSize = 15;

        private static readonly Tile[,] boardArray = new Tile[boardSize, boardSize];

        private static readonly List<int> validXPositionsForTile = new List<int>();
        public static List<int> ValidXPositionsForTile 
        {
            get { return validXPositionsForTile; }
        }

        private static readonly List<int> validYPositionsForTile = new List<int>();
        public static List<int> ValidYPositionsForTile
        {
            get { return validYPositionsForTile; }
        }


        public static void Initialize()
        {
            for (int column = 0; column < boardSize; column++)
            {
                validXPositionsForTile.Add(column);
            }

            for (int row = 0; row < boardSize; row++)
            {
                validYPositionsForTile.Add(row);
            }
        }

