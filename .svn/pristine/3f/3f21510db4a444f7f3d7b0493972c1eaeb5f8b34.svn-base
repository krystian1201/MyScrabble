using System;
using System.Collections.Generic;
using System.Linq;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Media;
using System.Windows.Shapes;

namespace MyScrabble
{
    /// <summary>
    /// Interaction logic for MainWindow.xaml
    /// </summary>
    public partial class MainWindow : Window
    {
        private Board board;

        public MainWindow()
        {
            InitializeComponent();

            board = new Board(BoardGrid);

            board.DefineGridRowsAndColumns();
            board.AddCells();
            board.ColorBonusCells();

            InitializeComboBoxes();
        }

        private void InitializeComboBoxes()
        {
            comboBoxLetters.Items.Add("B");
            comboBoxLetters.Items.Add("A");
            comboBoxLetters.Items.Add("C");


            for (int i = 1; i <= board.boardSize; i++)
            {
                comboBoxX.Items.Add(i);
                comboBoxY.Items.Add(i);
            }
        }

    }
}
