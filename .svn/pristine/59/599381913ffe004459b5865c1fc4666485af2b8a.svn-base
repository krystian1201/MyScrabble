<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="MyScrabble.MainWindow"
        Title="MyScrabble" ResizeMode="CanMinimize" Width="768" d:DesignHeight="662" Foreground="White">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF2EC3DA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="505"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="505"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" 
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Grid x:Name="BoardGrid" Width="500" Height="500" VerticalAlignment="Top" 
			    HorizontalAlignment="Center" Margin="0" Background="White">
            </Grid>
        </Border>
        <StackPanel x:Name="LettersStackPanel" Grid.Column="1" Grid.Row="2" 
                    HorizontalAlignment="Center"  
                    VerticalAlignment="Center" Background="LightGray" >

            <Grid Width="301">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Height="33" Width="33" Grid.Column="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="33"  
                          UriSource="C:\Users\Krystian\Documents\Visual Studio 2012\Projects\MyScrabble\MyScrabble\LetterTiles\A.jpg" />
                    </Image.Source>
                </Image>

                <Image Height="33" Width="33" Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="33"  
                          UriSource="C:\Users\Krystian\Documents\Visual Studio 2012\Projects\MyScrabble\MyScrabble\LetterTiles\B.jpg" />
                    </Image.Source>
                </Image>

                <Image Height="33" Width="33" Grid.Column="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="33"  
                          UriSource="C:\Users\Krystian\Documents\Visual Studio 2012\Projects\MyScrabble\MyScrabble\LetterTiles\C.jpg" />
                    </Image.Source>
                </Image>

            </Grid>

        </StackPanel>
        <ComboBox x:Name="comboBoxLetters" HorizontalAlignment="Left" Margin="10,128,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Grid.Column="2"/>
        <ComboBox x:Name="comboBoxX" HorizontalAlignment="Left" Margin="10,183,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Grid.Column="2"/>
        <ComboBox x:Name="comboBoxY" HorizontalAlignment="Left" Margin="69,183,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Grid.Column="2"/>
        <Label x:Name="labelX" Content="X" Grid.Column="2" HorizontalAlignment="Left" Margin="21,160,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="labelY" Content="Y" Grid.Column="2" HorizontalAlignment="Left" Margin="82,160,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="labelLetter" Content="Letter" Grid.Column="2" HorizontalAlignment="Left" Margin="10,105,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="buttonMoveLetter" Content="GO!" Grid.Column="2" HorizontalAlignment="Left" Margin="10,229,0,0" Grid.Row="1" VerticalAlignment="Top" Width="109"/>
    </Grid>

</Window>
