<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="MyScrabble.MainWindow"
        Title="MyScrabble" ResizeMode="CanMinimize" Width="800" d:DesignHeight="662" Foreground="White" Height="550">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF2EC3DA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="402"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="140*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="402"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1" 
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,0,34,0" Height="402" Width="402" Grid.ColumnSpan="2">
            <Grid x:Name="BoardGrid" Width="400" Height="400" 
			    HorizontalAlignment="Center" Margin="0" Background="White" VerticalAlignment="Center"/>
        </Border>

        <Grid x:Name="BoardLeftSideMarksGrid" Grid.Row="1" Grid.Column="1"/>
        <Grid x:Name="BoardRightSideMarksGrid" Grid.Row="1" Grid.Column="3"/>
        <Grid x:Name="BoardTopSideMarksGrid" Grid.Column="2" Margin="0"/>
        <Grid x:Name="BoardBottomSideMarksGrid" Grid.Column="2" Grid.Row="2"/>

        <StackPanel x:Name="TilesStackPanel" Grid.Column="2" Grid.Row="3" 
                    HorizontalAlignment="Center"  
                    VerticalAlignment="Center" Background="LightGray" Margin="51,0" Height="30" Width="300" >

            <Grid x:Name="TilesGrid" Width="301">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Height="33" Width="33" Grid.Column="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="33"  
                          UriSource="C:\Users\Krystian\Documents\Visual Studio 2012\Projects\MyScrabble\MyScrabble\LetterTiles\A.jpg" />
                    </Image.Source>
                </Image>

                <Image Height="33" Width="33" Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="33"  
                          UriSource="C:\Users\Krystian\Documents\Visual Studio 2012\Projects\MyScrabble\MyScrabble\LetterTiles\B.jpg" />
                    </Image.Source>
                </Image>

                <Image Height="33" Width="33" Grid.Column="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="33"  
                          UriSource="C:\Users\Krystian\Documents\Visual Studio 2012\Projects\MyScrabble\MyScrabble\LetterTiles\C.jpg" />
                    </Image.Source>
                </Image>

            </Grid>

        </StackPanel>


        <StackPanel x:Name="PlaceTileStackPanel" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="1">

            <ComboBox x:Name="ComboBoxLetters" HorizontalAlignment="Left" Margin="10,23,0,0" 
                       VerticalAlignment="Top" Width="50"/>
            <Label x:Name="LabelX" Content="X" HorizontalAlignment="Left" Margin="21,43,0,0" 
            	VerticalAlignment="Top" Foreground="White"/>
            <ComboBox x:Name="ComboBoxX" HorizontalAlignment="Left" Margin="12,59,0,0" 
            	VerticalAlignment="Top" Width="50"/>
            <Label x:Name="LabelY" Content="Y" HorizontalAlignment="Left" Margin="96,36,0,0" 
            	VerticalAlignment="Top" Foreground="White"/>
            <ComboBox x:Name="ComboBoxY" Margin="56,59,56,0" Width="50"/>
            <Label x:Name="LabelLetter" Content="Letter" HorizontalAlignment="Left" Margin="12,400,0,0" 
                   VerticalAlignment="Top" Foreground="White" Grid.RowSpan="2"/>
            <Button x:Name="ButtonMoveLetter" Content="GO!" HorizontalAlignment="Right" Margin="0,16,10,0" 
                    VerticalAlignment="Top" Width="109"/>

        </StackPanel>

    </Grid>

</Window>
